{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "backend",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["backend/**/*"],
  "exclude": ["node_modules", "dist"]
}
